<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyATTpBUEZi5-hU-cCTlzAbThG0sVFszouU&callback=initMap"></script>

<div class="container">
  <h1 class="title has-text-centered">Sell stuff page</h1>
  <div class="columns">
    <div class="column is-half is-offset-one-quarter">
      <form action="/postListing/newListing" method="post" enctype="multipart/form-data" onsubmit="return validateMyForm();">

        <input type="hidden" value="{{user._json.sub}}" name="user_id"/>
        <input type="hidden" name="location" required/>

      <div class="field">
        <label class="label">Name</label>
        <div class="control">
          <input class="input" type="text" placeholder="Item name" name="name" required>
        </div>
      </div>

      <div class="field">
        <label class="label">Description</label>
        <div class="control">
          <textarea class="textarea" placeholder="Description" name="description" required></textarea>
        </div>
      </div>

      <div class="file">
        <label class="label">Upload Images</label>
        <label class="file-label">
          <input class="file-input" type="file" name="images" id="fileUpload" multiple required>
          <span class="file-cta">
            <span class="file-icon">
              <i class="fa fa-upload"></i>
            </span>
            <span class="file-label"id="fileUploadLabel">
              Choose a fileâ€¦
            </span>
          </span>
        </label>
      </div>

      <div class="field">
        <label class="label">Category</label>
        <div class="control">
          <div class="select">
            <select id="select-category" name="category">
              <option value="Book">Book</option>
              <option value="Furniture">Furniture</option>
              <option value="Bike">Bike</option>
              <option value="Apartment">Apartment</option>
              <option value="Other">Other</option>
            </select>
          </div>
        </div>
      </div>

      <div id="apartment-extras">

        <div class="field">
          <label class="label">Address</label>
          <div class="control">
            <input class="input" type="text" placeholder="Address" name="address">
          </div>
          <button type="button" name="get_coordinates" class="button is-primary">Find on map</button>
              <div id="map"></div>
        </div>

        <div class="columns">
          <div class="column">
            <div class="field">
              <label class="label">Bedroom</label>
              <div class="control">
                <input class="input" type="number" name="beds" placeholder="2">
              </div>
            </div>
          </div>

          <div class="column">
            <div class="field">
              <label class="label">Bath</label>
              <div class="control">
                <input class="input" type="number" name="bath" placeholder="2">
              </div>
            </div>
          </div>

          <div class="column">
            <div class="field">
              <label class="label">Area</label>
              <div class="control">
                <input class="input" type="number" name="area" placeholder="area (in sqft)">
              </div>
            </div>
          </div>
        </div>

        <div class="columns">
          <div class="column">
            <label class="checkbox">
              <input type="checkbox" name="pets">
              Pets Allowed
            </label>
          </div>

          <div class="column">
            <label class="checkbox">
              <input type="checkbox" name="parking">
              Parking Available
            </label>
          </div>

          <div class="column">
            <label class="checkbox">
              <input type="checkbox" name="ac">
              Air Conditioned
            </label>
          </div>
        </div>

      </div>

      <div class="field">
        <label class="label">Rent / Sell</label>
        <div class="control">
          <div class="select">
            <select id="select-type" name="type">
              <option value="Sell">Sell</option>
              <option value="Rent">Rent</option>
            </select>
          </div>
        </div>
      </div>

      <div id="rent-extras" class="columns">
        <div class="column">
          <div class="field">
            <label class="label">From Date</label>
            <div class="control">
              <input class="input" type="date" name="from_date">
            </div>
          </div>
        </div>

        <div class="column">
          <div class="field">
            <label class="label">To Date</label>
            <div class="control">
              <input class="input" type="date" name="to_date">
            </div>
          </div>
        </div>
      </div>

      <div class="field">
        <label id="price-label" class="label">Price ($)</label>
        <div class="control">
          <input id="price-input" class="input" type="number" step="0.01" placeholder="Price ($)" name="price" required>
        </div>
      </div>

      <div class="control">
        <input type="submit" class="button is-success" value="Submit"/>
      </div>
    </form>
    </div>

  </div>

</div>
