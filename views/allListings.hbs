<div class="container">
  <h1>Your Listings:</h1>
  {{#if products}}
  <div class="columns is-multiline">
{{#each products}}
<div class="card">
<div class="card-image">
  <figure class="image is-4by3 allListingsImg">
    <img src="/upload/view/{{this.dispImg}}">
  </figure>
</div>
<div class="card-content">
  <input type="hidden" name="id" value="{{this._id}}"/>
  <div class="allListingsName">
    <h1 class="title is-4">{{this.name}}</h1>
  </div>
    {{#if this.rent}}
    <h1 class="title is-6">${{this.price}} /month</h1>
    {{else}}
    <h1 class="title is-6">${{this.price}}</h1>
    {{/if}}
    <p>Posted: {{this.newTime}}</p>
</div>
<footer class="card-footer">
  <a href="/product/{{this._id}}" class="card-footer-item">View</a>
  <a href="/user/editListing/{{this._id}}" class="card-footer-item">Edit</a>
  <a class="card-footer-item allListings-delete-btn">Delete</a>
</footer>
</div>
{{/each}}
  </div>
{{else}}
<h1>You have no Listings</h1>
  {{/if}}
</div>

<div class="modal" id="confDelete">
  <div class="modal-background"></div>
  <div class="modal-card">
    <input type="hidden" name="chosenId"/>
    <header class="modal-card-head">
      <p class="modal-card-title">Delete Request</p>
      <button class="delete" aria-label="close" id="closeCommentForm"></button>
    </header>
    <section class="modal-card-body">
      <h6>Are you sure you want to delete this request?</h6>
    </section>
    <footer class="modal-card-foot">
      <button class="button" id="cancel">Cancel</button>
      <button class="button is-danger" id="deleteListing">Delete</button>
    </footer>
  </div>
</div>
