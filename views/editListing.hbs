<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyATTpBUEZi5-hU-cCTlzAbThG0sVFszouU&callback=initMap"></script>

<div class="container">
  <h1 class="title has-text-centered">Edit This Listing</h1>
  <div class="columns">
    <div class="column is-half is-offset-one-quarter">
        <input type="hidden" value="{{user._json.sub}}" name="user_id"/>
        <input type="hidden" name="location" required value="{{product.apartment.location}}"/>

        <input type="hidden" name="prodId" value="{{product._id}}"/>
      <div class="field">
        <label class="label">Name</label>
        <div class="control">
          <input class="input" type="text" placeholder="Item name" name="name" value="{{product.name}}" required>
        </div>
      </div>

      <div class="field">
        <label class="label">Description</label>
        <div class="control">
          <textarea class="textarea" placeholder="Description" name="description" required>{{product.description}}</textarea>
        </div>
      </div>

      <div class="field">
        <label class="label">Category</label>
        <div class="control">
          <div class="select">
            <select id="select-category" name="category">
              <option value="Book" {{#if product.book}} selected {{/if}}>Book</option>
              <option value="Furniture" {{#if product.furniture}} selected {{/if}}>Furniture</option>
              <option value="Bike" {{#if product.bike}} selected {{/if}}>Bike</option>
              <option value="Apartment" {{#if product.apartment}} selected {{/if}} >Apartment</option>
              <option value="Other">Other</option>
            </select>
          </div>
        </div>
      </div>

      <div id="apartment-extras">

        <div class="field">
              <label class="label">Address</label>
              <div class="columns">
                <div class="column is-three-quarters">
              <div class="control">
                <input class="input" type="text" placeholder="Address" name="address" value="{{product.apartment.address}}">
              </div>
            </div>
<div class="column is-one-quarter">
            <button type="button" name="get_coordinates" class="button is-primary">Find on map</button>
          </div>
          </div>
              <div id="map"></div>
        </div>

        <div class="columns">
          <div class="column">
            <div class="field">
              <label class="label">Bedroom</label>
              <div class="control">
                <input class="input" type="number" name="beds" placeholder="2" value="{{product.apartment.beds}}">
              </div>
            </div>
          </div>

          <div class="column">
            <div class="field">
              <label class="label">Bath</label>
              <div class="control">
                <input class="input" type="number" name="bath" placeholder="2" value="{{product.apartment.bath}}">
              </div>
            </div>
          </div>

          <div class="column">
            <div class="field">
              <label class="label">Area</label>
              <div class="control">
                <input class="input" type="number" name="area" placeholder="area (in sqft)" value="{{product.apartment.area}}">
              </div>
            </div>
          </div>
        </div>

        <div class="columns">
          <div class="column">
            <label class="checkbox">
              <input type="checkbox" name="pets" {{#if product.apartment.pets}}checked{{/if}}>
              Pets Allowed
            </label>
          </div>

          <div class="column">
            <label class="checkbox">
              <input type="checkbox" name="parking"{{#if product.apartment.parking}}checked{{/if}}>
              Parking Available
            </label>
          </div>

          <div class="column">
            <label class="checkbox">
              <input type="checkbox" name="ac" {{#if product.apartment.ac}}checked{{/if}}>
              Air Conditioned
            </label>
          </div>
        </div>

      </div>

      <div class="field">
        <label class="label">Rent / Sell</label>
        <div class="control">
          <div class="select">
            <select id="select-type" name="type">
              <option value="Sell">Sell</option>
              <option value="Rent" {{#if product.rent}} selected {{/if}}>Rent</option>
            </select>
          </div>
        </div>
      </div>

      <div id="rent-extras" class="columns">
        <div class="column">
          <div class="field">
            <label class="label">From Date</label>
            <div class="control">
              <input class="input" type="date" name="from_date" value={{product.rent.start}}>
            </div>
          </div>
        </div>

        <div class="column">
          <div class="field">
            <label class="label">To Date</label>
            <div class="control">
              <input class="input" type="date" name="to_date" value={{product.rent.end}}>
            </div>
          </div>
        </div>
      </div>

      <div class="field">
        <label id="price-label" class="label">Price ($)</label>
        <div class="control">
          <input value="{{product.price}}" id="price-input" class="input" type="number" step="0.01" placeholder="Price ($)" name="price" required>
        </div>
      </div>

      <div class="file">
        <label id="price-label" class="label">Upload additional Images</label>
        <label class="file-label">
          <input class="file-input" type="file" name="images" multiple>
          <span class="file-cta">
            <span class="file-icon">
              <i class="fa fa-upload"></i>
            </span>
            <span class="file-label">
              Choose a fileâ€¦
            </span>
          </span>
        </label>
      </div>

      <div class="control column is-narrow">
        <input type="button" class="save-button button is-success" value="Save Changes"/>
          <div class="cancel-button button is-danger"><a href="/user/allListings" style="color:white">Cancel</a></div>
      </div>

    </div>
  </div>


</div>
